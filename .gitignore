# Игнорировать ядро битрикса 
www/bitrix/
# кроме файла обмена с 1С
!www/bitrix/admin/1c_exchange.php
# Кроме файла доп. настроек
!www/bitrix/.settings_extra.php


# Игнорировать загруженные файлы
www/upload/*
!www/upload/1c_exchange*
!www/upload/1c_catalog*
www/upload/1c_exchange/logger/*
www/upload/1c_catalog/import_files/*

# Игнорировать файл с паролями и ключами
www/.integration/secret.inc.php
# Игнорировать конфиг
www/local/php_interface/settings.inc.php

# Игнорировать файлы сессии
tmp/sessions/*

# Игнорировать логи
logs/*.log
# Игнорировать логи SMTP
logs/maildir/[0-9]*
logs/smtplog/[0-9]*


# Игнорировать временные файл документации
docs/*.toc
docs/*.htoc
docs/*.log
docs/*.aux
docs/*.haux
docs/*.out
docs/*.pdf
docs/*.html
docs/*.png
docs/*.jpg
docs/manual/source/02_noauth_funcs/figures/*.pdf
docs/manual/source/04_auth_funcs/figures/*.pdf

# Игнорируем служебные пользовательские папки и файлы
.bash_history
.bash_logout
.viminfo
.local
.profile
.selected_editor
.cache
.config

# Игнорировать конфиги http-авторизации
etc/nginx/auth/*.conf
!etc/nginx/auth/default.conf
etc/nginx/auth/*.passwd

# Игнорировать прочее
*.swp
*.swo
*.zip
*.tar
*.gz
*.tgz
*.tbz
*.bz2
*.backup
