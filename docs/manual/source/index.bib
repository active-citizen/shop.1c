@gd{CMS,
word={CMS},
definition={Система управления контентом. Специальный раздел магазина, предназначенный для манипулирования объектами, отображаемыми на
сайте. Например банерами, текстом на страницах и пр. Вход защищен авторизацией и расположен по адресу /bitrix/admin/}
}

@gd{FBF,
word={ФОС},
definition={Форма обратной связи. Предназначена для отправки сообщений администрации магазина. Сообщения приходят на
почту администратору магазина и записываются в БД, откуда могут быть прочитаны через \gloss{CMS}}
}

@gd{goods_tizer,
word={Тизер товара},
definition={Элемент интерфейса, содержащий краткую информацию о товаре. Является элементом области вывода тизеров, в
корой располагаеся в виде плитки. см. рис. \ref{fig:common_items_4} и \ref{fig:common_items_5}}
}

@gd{admin,
word={Администратор \gloss{CMS}},
definition={Пользователь \gloss{CMS} имеющий доступ ко всем её функциям. Создаётся при инсталяции \gloss{CMS}. 
Авторизуется штатным механизмом по адресу /bitrix/}
}


@gd{shop_admin,
word={Администратор магазина},
definition={Пользователь \gloss{CMS} имеющий доступ ко всем функциям магазина. 
Авторизуется так же как и любой \gloss{auth_user}, привилегии получает включением в группу пользователем \gloss{admin}.}
}

@gd{content_editor,
word={Редактор контента},
definition={Пользователь \gloss{CMS} имеющий доступ к функциям редактирования содержимого 
информационных разделов (\ref{sec:rules_hiw}, \ref{sec:page_faq}, \ref{sec:slider}).
Авторизуется так же как и любой \gloss{auth_user}, привилегии получает включением в группу пользователем \gloss{admin}.}
}

@gd{auth_user,
word={Авторизованный пользователь},
definition={Пользователь авторизованный в магазине через описанную в разделе \ref{sec:auth} процедуру. }
}

@gd{nonauth_user,
word={Неавторизованный пользователь},
definition={Пользователь не прошедший процедуру описанную в разделе \ref{sec:auth} и имеющий 
ограниченный доступ к функционалу, описанный в разделе \ref{sec:nonauth_user}. }
}


@gd{AG,
word={АГ},
definition={web-сайт <<активный гражданин>>}
}

@gd{goods,
word={Товар},
definition={Элемент торгового каталога, принадлежащий какому-либо разделу и описывающий общие, а не индивидуальные свойства
поощрения(которыми обладает любая предлагаемая к покупке единица). Например, к продаже может предлагаться футболка с
логотипом \gloss{AG} размеров от M до XL, различных цветов, находящаяся на различных складах. Товар, в данном случае ---
это <<Футболка с логотипом \gloss{AG}>>, всё же остальное описывается таким понятием как \gloss{offer}. Товар в торговом каталоге 
отображает карточка товара (см. \ref{sec:goods_cart}). Магазин получает информацию о них в результате действия \gloss{import1c}.
}
}

@gd{offer,
word={Торговое предложение},
definition={Элемент торгового каталога, содержащий индивидуальную информацию о конкретной единице поощрения: цена,
нахождение на объекте типа \gloss{store}, характеристики (цвет, размер и пр.). Доступно для выбора в разделах 
\ref{sec:goods_cart_stores} и \ref{sec:goods_cart_props}. Магазин получает информацию о них в результате действия \gloss{import1c}.
}
}


@gd{XMLID,
word={XML-ID объекта},
definition={Уникальный идентивикатор любого объекта магазина (товара, торгового предложения,раздела, склада и пр.),
позволяющий синхронизировать информацию о нём с базой данных УНФ}
}


@gd{UNF,
word={1С УНФ},
definition={
Программное обеспечение для ведения бухгалтерского учёта. Центральное хранилище информации об объектах \gloss{storage}, \gloss{goods}, \gloss{offer}
}
}


@gd{exchange1c,
word={1С обмен заказами},
definition={
Передача из магазина в \gloss{UNF} и из \gloss{UNF} в магазин информации о заказах 
и изменении их статуса. Осужетсвляется посредством формата XML
}
}

@gd{import1c,
word={1C выгрузка каталога},
definition={
Передача из \gloss{UNF} в магазин информации о товарах, предложениях, складах, складских остатках. 
Осуществляется передачей архива, состоящего из файлов 
offers.xml (объекты типа \gloss{offer} и \gloss{storage}), import(объекты типа \gloss{goods}) 
и файлов ресурсов (изображений и пр.) 
}
}

@gd{
storage,
word={Склад},
definition={
Реальная (конкретное помещение) или виртуальная(электронный сервис) точка выдачи поощрений.
Магазин получает информацию о них в результате действия \gloss{import1c}.}
}

@gd{
AGSESSIONID,
word={АГ SESSION ID},
definition={
ID сессии текущего пользователя, авторизованного на \gloss{AG}
}
}


@gd{
AGPROFILE,
