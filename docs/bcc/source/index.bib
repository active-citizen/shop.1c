@gd{extAPI,
word={API ВП},
definition={Программный интерфейс \gloss{ext_app} на основе REST, используемый 
в качестве backend для получения профиля \gloss{user} от имени которого начисляются 
или списываются \gloss{points}.
}
}

@gd{extBCC,
word={API ККБ},
definition={Программный интерфейс на основе REST, используемый 
в качестве backend для получения запросов на начисление, удержание и выдачу 
истории начислений и удержаний \gloss{points} от \gloss{bcc} для \gloss{ext_app}
}
}

@gd{AppID,
word={AppID},
definition={Уникальный идентификатор \gloss{ext_app} выдаваемый в процессе 
регистрации (см. \ref{sec:registration}) однозначно идентифицирующее 
источник запросов к \gloss{bcc}
}
}

@gd{AppKey,
word={AppKey},
definition={Секретная последовательность символов выдаваемая для \gloss{ext_app} 
в процессе регистрации (см. \ref{sec:registration}) и используемое 
для подписи запросов от \gloss{ext_app} к \gloss{bcc} при авторизации 
(см. \ref{sec:auth})
}
}


@gd{bcc,
word={ККБ},
definition={\textbf{Контроллер конвертации баллов.} Онлайн-сервис, предоставляющий 
возможность \gloss{ext_app} получать, хранить, расходовать и предоставлять 
информацию о \gloss{points} на счету \gloss{user} через протокол обмена 
описанный в данном документе.
}
}


@gd{ext_app,
word={ВП},
definition={\textbf{Внешнее приложение}. Любое приложение, поддерживающее протокол обмена 
с \gloss{bcc}, описанный в данном документе, и использующее \gloss{bcc} для операций 
начисления и изъятия \gloss{points} от имени \gloss{user} за полезные с точки зрения 
приложения действия
}
}

@gd{points,
word={ВБ},
definition={\textbf{Виртуальные баллы}. Сущности, начисляемые для \gloss{user} на личный счёт 
в \gloss{bcc} за совершенные полезные действия в рамках функционала \gloss{ext_app}}
}


@gd{user,
word={АПВП},
definition={
\textbf{Авторизованный пользователь внешнего приложения.} Физическое лицо, 
прошедшее процедуру авторизации и имеющего \gloss{SESSION_ID} от имени которого \gloss{ext_app} 
получает доступ к операциям зачисления и списания \gloss{points} в \gloss{bcc}
}
}

@gd{session_id,
word={SESSION ID},
definition={
Уникальная последовательность символов, однозначно идентифицирующая \gloss{user} 
и полученная им в процессе авторизации в \gloss{ext_app}
}
}


